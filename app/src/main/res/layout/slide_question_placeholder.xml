<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="question"
            type="io.github.kabirnayeem99.islamqaorg.domain.entity.Question" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0.8dp"
        app:strokeColor="#aaaaaaaa"
        app:strokeWidth="0.8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="12dp">

            <View
                android:id="@+id/tv_question"
                android:layout_width="210dp"
                android:layout_height="10dp"
                android:background="#aaaaaaaa"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                app:layout_constraintBottom_toTopOf="@id/tv_question_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tv_question_2"
                android:layout_width="180dp"
                android:layout_height="10dp"
                android:background="#aaaaaaaa"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/bg_icon_rounded"
                android:backgroundTint="#11aaaaaa"
                android:contentDescription="@string/content_desc_go_to_details"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="#aaaaaaaa" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>