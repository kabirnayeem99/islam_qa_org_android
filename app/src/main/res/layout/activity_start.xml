<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_light_primary">


        <ImageView
            android:id="@+id/iv_background_geometry"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@drawable/ic_islamic_geometric"
            android:contentDescription="@string/content_desc_app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/md_theme_light_primary" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_logo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardBackgroundColor="@color/md_theme_dark_onSurface"
            app:cardCornerRadius="1000dp"
            app:cardElevation="0.2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_islamqa"
                app:tint="@color/md_theme_light_onSurface" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:elevation="2dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/md_theme_dark_tertiary"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/cv_logo"
            app:layout_constraintTop_toBottomOf="@id/cv_logo"
            app:layout_constraintTop_toTopOf="@id/cv_logo">

            <TextView
                android:id="@+id/tv_app_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="4dp"
                android:fontFamily="@font/cardo_italic"
                android:gravity="center_vertical"
                android:textColor="@color/md_theme_light_onSurface"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="0.0.1" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>