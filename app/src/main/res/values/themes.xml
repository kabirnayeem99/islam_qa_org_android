<resources>
    <!-- Base application theme. -->
    <style name="Theme.IslamQAOrg" parent="Theme.Material3.DynamicColors.Light" />

    <style name="Theme.IslamQAOrg.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.Material3.DynamicColors.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.IslamQAOrg.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="backgroundColor">?android:colorPrimaryDark</item>
        <item name="windowSplashScreenBackground">?android:colorPrimaryDark</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.IslamQAOrg.NoActionBar</item>
    </style>

</resources>